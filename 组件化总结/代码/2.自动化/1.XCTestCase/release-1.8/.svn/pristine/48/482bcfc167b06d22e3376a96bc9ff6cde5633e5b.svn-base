#import "CYTCashRecordVM.h"

@interface CYTCashRecordVM ()

@end

@implementation CYTCashRecordVM
@synthesize requestCommand = _requestCommand;

#pragma mark- flow control
- (void)ff_initWithModel:(id)model {
    [super ff_initWithModel:model];
    
    self.listArray = [NSMutableArray array];
}

#pragma mark- api

#pragma mark- handleResponse
- (void)handleResponseModel:(FFBasicNetworkResponseModel *)responseModel {
    if (self.rowId==-1) {
        [self.listArray removeAllObjects];
    }
    NSArray *list = [CYTCashRecordModel mj_objectArrayWithKeyValuesArray:responseModel.dataDictionary[@"records"]];
    self.isMore = [responseModel.dataDictionary[@"isMore"] boolValue];

    [self.listArray addObjectsFromArray:list];
    CYTCashRecordModel *lastModel = [self.listArray lastObject];
    if (lastModel) {
        self.rowId = lastModel.rowId;
    }
}

#pragma mark- method 

#pragma mark- get
- (RACCommand *)requestCommand {
    if (!_requestCommand) {
        _requestCommand = [self commandWithRequestModel:^FFBasicNetworkRequestModel *{
            FFBasicNetworkRequestModel *model = [FFBasicNetworkRequestModel new];
            model.needHud = NO;
            model.methodType = NetRequestMethodTypeGet;
            model.requestURL = kURL.order_withdraw_getbills;
            model.requestParameters = @{@"lastId":@(self.rowId)};
            return model;
        } andHandle:^(FFBasicNetworkResponseModel *resultModel) {
            [self handleResponseModel:resultModel];
        }];
    }
    return _requestCommand;
}

@end
