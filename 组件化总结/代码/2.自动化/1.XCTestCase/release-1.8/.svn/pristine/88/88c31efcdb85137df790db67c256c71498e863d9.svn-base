#import "CYTUpdateContentView.h"

@implementation CYTUpdateContentView

- (void)ff_addSubViewAndConstraints {
    [self addSubview:self.imageView];
    [self.imageView makeConstraints:^(MASConstraintMaker *make) {
        make.edges.equalTo(self);
    }];
}

#pragma mark- get
- (UIImageView *)imageView {
    if (!_imageView) {
        _imageView = [UIImageView imageViewWithImgName:nil];
        
        _imageView.userInteractionEnabled = YES;
        UITapGestureRecognizer *tapGes = [UITapGestureRecognizer new];
        @weakify(self);
        [[tapGes rac_gestureSignal] subscribeNext:^(id x) {
            @strongify(self);
            if (self.updateBlock) {
                self.updateBlock();
            }
        }];
        [_imageView addGestureRecognizer:tapGes];
    }
    return _imageView;
}

@end
